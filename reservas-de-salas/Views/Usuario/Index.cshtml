@model IEnumerable<reservas_de_salas.Models.Usuario>

    @{
    ViewData["Title"] = "Lista de Usuários";
    }
<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo Usuário</a>
</p>

<table id="tableUsuarios" class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>E-mail </th>
            <th>Administrador</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <td>@item.Email</td>
                <td>@(item.Administrador ? "Sim" : "Não")</td>
                <td>
                    <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id">Detalhes</a>
                    | <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">Editar</a>
                    | <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }

    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tableUsuarios').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Portuguese-Brasil.json"
                },
                paging: true,
                searching: true,
                ordering: true,
                info: true
            });
        });
    </script>
}