@model IEnumerable<reservas_de_salas.Models.Sala>
@{
    ViewData["Title"] = "Lista de Salas";
}
<h1>Lista de Salas</h1>
@if(TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-success mt-3" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Sala</a>
</p>
<table id="salasTable" class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Capacidade</th>
            <th>Recursos</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var iten in Model)
        {
            <tr>
                <td>@iten.Id</td>
                <td>@iten.Nome</td>
                <td>@iten.Capacidade</td>
                <td>@iten.Recursos</td>
                <td>
                    <a asp-action="Details" asp-route-id="@iten.Id" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@iten.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@iten.Id" class="btn btn-danger btn-sm">Excluir</a>

                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#salasTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Portuguese-Brasil.json"
                },
                paging: true,
                searching: true,
                ordering: true,
                info: true
            });
        });
    </script>
}